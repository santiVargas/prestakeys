{% extends 'layout.html.twig' %}

{% block title %}
    Listado de llaves
{% endblock %}

{% block content %}
    <h1>Llaves <a href="{{ path('llave_nueva') }}" class="btn btn-success"><i class="fa fa-plus"></i> Nueva llave</a></h1>

    <div class="btn-group filtros">
        <a href="{{ path('llave_listar') }}" class="btn btn-{{ filtro == 0 ? "primary" : "info" }}">Todas</a>
        <a href="{{ path('llave_listar', {'filtro': 1}) }}" class="btn btn-{{ filtro == 1 ? "primary" : "info" }}">Prestadas</a>
        <a href="{{ path('llave_listar', {'filtro': 2}) }}" class="btn btn-{{ filtro == 2 ? "primary" : "info" }}">No prestadas</a>
    </div>

    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>Código</th>
                <th>Dependencia</th>
                <th>Descripción</th>
                <th>Prestada a</th>
            </tr>
        </thead>
        <tbody>
            {% for llave in llaves %}
                <tr>
                    <td><a href="{{ path('llave_form', {'id': llave.id}) }}">{{ llave.codigo }}</a></td>
                    <td>{{ llave.dependencia }}</td>
                    <td>{{ llave.descripcion }}</td>
                    <td>
                        {% if llave.usuario %}
                            {{ llave.usuario }}
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
