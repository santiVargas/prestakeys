{% extends 'layout.html.twig' %}

{% block title %}
    Eliminar llave
{% endblock %}

{% block content %}
    <h1>Eliminar dependencia</h1>

    <div class="alert alert-warning">
        ¿Seguro que desea eliminar la dependencia "{{ dependencia.descripcion }}"? Esta operación no se puede deshacer.
    </div>

    <form method="post">
        <a href="{{ path('dependencia_form', {'id': dependencia.id}) }}" class="btn btn-info"><i class="fa fa-arrow-left"></i> Volver a la dependencia</a>
        <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i> Eliminar la dependencia</button>
    </form>
{% endblock %}


